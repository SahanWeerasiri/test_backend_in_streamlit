{
  "name": "Python API Only",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": ["api.py"]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip install fastapi uvicorn && echo 'âœ… API dependencies installed'",
  "postAttachCommand": "uvicorn api:app --host 0.0.0.0 --port 8000 --reload",
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8000]
}
